[Unit]
Description=BrowserMCP Enhanced - HTTP MCP Server
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=__USER__
Group=__GROUP__
Environment=NODE_ENV=production
Environment="HOME=__HOME__"
EnvironmentFile=/etc/default/browsermcp
WorkingDirectory=__INSTALL_DIR__
ExecStart=/usr/bin/node __INSTALL_DIR__/dist/index-http.js --port ${BROWSER_MCP_HTTP_PORT}
Restart=always
RestartSec=3
KillMode=process

[Install]
WantedBy=multi-user.target

