{
  "manifest_version": 3,
  "name": "BrowserMCP Enhanced",
  "version": "1.9.7",
  "description": "Enhanced BrowserMCP with CSP-safe execution and auto-reconnect",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation",
    "storage",
    "debugger",
    "alarms",
    "idle"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup-detector.js", "element-tracker.js", "element-validator.js", "code-executor-safe.js", "content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}