{
  "manifest_version": 2,
  "name": "BrowserMCP Enhanced Firefox",
  "version": "1.1.0",
  "description": "Enhanced BrowserMCP Firefox port with automation support",

  "permissions": [
    "tabs",
    "activeTab",
    "webNavigation",
    "storage",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background-v2.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "default_title": "BrowserMCP Enhanced Firefox"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "element-tracker.js",
        "element-validator.js",
        "feedback-collector.js",
        "content.js",
        "content-minimal.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "browsermcp-enhanced@example.com",
      "strict_min_version": "78.0"
    }
  },

  "web_accessible_resources": [
    "minimal-enhanced.js",
    "scaffold-enhanced.js",
    "accessibility-utils.js",
    "click-detection.js",
    "enhanced-click-handler.js",
    "trusted-click.js"
  ]
}
